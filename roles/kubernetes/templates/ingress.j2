apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: {{application}}
  namespace: {{namespace}}
  labels:
    app: {{application}}
  annotations:
    # use the shared ingress-nginx
    kubernetes.io/ingress.class: "nginx"
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
  - host: {{ingress_host}}
    http:
      paths:
      - path: /
        backend:
          serviceName: {{application}}
          servicePort: 80